<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rooster.Toevoegen"
             Title="Toevoegen">

    <StackLayout
        HorizontalOptions="Center"
        MaximumWidthRequest="200">
        <Entry x:Name="vakNaamEntry" Placeholder="Vak"/>
        <Entry x:Name="vakBeschrijvingEntry" Placeholder="Vak Beschrijving"/>
        <Entry x:Name="docentNaamEntry" Placeholder="Docent"/>
        <Entry x:Name="lokaalEntry" Placeholder="Lokaal"/>
        <DatePicker x:Name="datumPicker"/>
        <Entry x:Name="startTijdEntry" Placeholder="Start Tijd (HH:mm)"/>
        <Entry x:Name="eindTijdEntry" Placeholder="Eind Tijd (HH:mm"/>
        <Button Text="Voeg les Toe" Clicked="lesToevoegen"/>
    </StackLayout>
</ContentPage>